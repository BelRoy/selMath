<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="0dp"
    android:rowCount="4"
    android:columnCount="1"
    tools:context="in.konstant.selmath.ProblemsActivity">

    <ProgressBar
        android:id="@+id/pbProgress"
        android:layout_row="0"
        android:layout_column="0"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:progress="42"
        android:progressDrawable="@xml/progressbar"
        />

    <TextView
        android:id="@+id/tvProblemNumber"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/comp"
        android:text="@string/problemNumber"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:gravity="center_vertical|center"
        android:paddingLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        />

    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginBottom="10dp"
        android:rowCount="4"
        android:columnCount="1"
        android:background="@color/main">

    <TextView
        android:id="@+id/tvFirstNumber"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="8888"
        android:textSize="30sp"
        android:gravity="center_vertical|center"
        android:fontFamily="monospace"
        />

    <TextView
        android:id="@+id/tvOperator"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="geteilt durch"
        android:textSize="25sp"
        android:gravity="center_vertical|center"
        android:fontFamily="monospace"
        />

    <TextView
        android:id="@+id/tvSecondNumber"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="2222"
        android:textSize="30sp"
        android:gravity="center_vertical|center"
        android:fontFamily="monospace"
        />

    </GridLayout>

    <TextView
        android:id="@+id/tvSolution"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginBottom="10dp"
        android:text=""
        android:textSize="30sp"
        android:gravity="center_vertical|center"
        android:fontFamily="monospace"
        android:background="@color/comp"
        />

        <include
            layout="@layout/numberpad"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

</GridLayout>
